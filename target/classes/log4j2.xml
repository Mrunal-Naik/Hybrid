<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ALL">
<Properties>
<Property name="basePath">./logs</Property>
</Properties>
  <Appenders>
  <RollingFile name="File" fileName="${basePath}/prints.log" filePattern="${basePath}/prints-%d{yyyy-MM-dd}.log">
  <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
  <SizeBasedTriggeringPolicy size="10000"/>
  </RollingFile>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
      <Logger name="Test.BookShelf" level="info" additivity="false">
      <AppenderRef ref="File"/>
    </Logger>
    <Logger name="Test.Cart" level="info" additivity="false">
      <AppenderRef ref="File"/>
    </Logger>
    <Logger name="Test.DoubleBed" level="info" additivity="false">
      <AppenderRef ref="File"/>
    </Logger>
    <Logger name="Test.GamingChair" level="info" additivity="false">
      <AppenderRef ref="File"/>
    </Logger>
    <Logger name="Test.KidsBookShelf" level="info" additivity="false">
      <AppenderRef ref="File"/>
    </Logger>
    <Logger name="Test.Login" level="info" additivity="false">
      <AppenderRef ref="File"/>
    </Logger>
    <Logger name="Test.Navigate" level="info" additivity="false">
      <AppenderRef ref="File"/>
    </Logger>
    <Logger name="Test.Stores" level="info" additivity="false">
      <AppenderRef ref="File"/>
    </Logger>
    <Logger name="Test.WishList" level="info" additivity="false">
      <AppenderRef ref="File"/>
    </Logger>
    <Logger name="Test.WoodenSofa" level="info" additivity="false">
      <AppenderRef ref="File"/>
    </Logger>
  </Loggers>
</Configuration>